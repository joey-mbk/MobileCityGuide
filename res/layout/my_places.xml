<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainStyle"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dip"
            android:background="@drawable/direction" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLayout3"
        style="@style/LinearLayout"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/free_walk_button"
            android:layout_width="73dp"
            android:layout_height="48dp"
            android:background="@drawable/free_walk" />

        <Button
            android:id="@+id/guide_tour_button"
            android:layout_width="75dp"
            android:layout_height="47dp"
            android:background="@drawable/guide_tour" />
    </LinearLayout>

</LinearLayout>