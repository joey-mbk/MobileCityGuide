<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainStyle"
    android:layout_gravity="top">

    <Button
        android:id="@+id/logo"
        android:layout_width="165dp"
        android:layout_height="83dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/start" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
         >

     <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_profile_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" 
            android:padding= "7dp"
            android:paddingLeft= "15dp"
            android:background="#CC0101" />
        
        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="142dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/listroundedcorners"
            android:cacheColorHint="#555555" 
            >
            
        </ListView>

        <Button
            android:id="@+id/create_profile"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonroundedcorners"
            android:text="@string/select_profile_new"
            android:textColor="#ffffff" />
        
    </LinearLayout>

</LinearLayout>